# Django Settings
SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY_HERE_CHANGE_THIS
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,backend

# Database - PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=pickbazar_db
DB_USER=postgres
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD
DB_HOST=db
DB_PORT=5432

# CORS Settings - با دامنه واقعی خود جایگزین کنید
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Payment Gateway - Zarinpal
ZARINPAL_MERCHANT_ID=your-production-merchant-id
ZARINPAL_CALLBACK_URL=https://yourdomain.com/api/payments/verify/

# Payment Gateway - PayPing
PAYPINT_TOKEN=your-production-paypint-token
PAYPINT_CALLBACK_URL=https://yourdomain.com/api/payments/paypint/verify/

# SMS Provider - Kavenegar
KAVENEGAR_API_KEY=your-production-kavenegar-api-key
KAVENEGAR_SENDER=your-sender-number

# SMS Provider - Ghasedak
GHASEDAK_API_KEY=your-production-ghasedak-api-key

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Media Files
MEDIA_ROOT=/app/media/
MEDIA_URL=/media/
